# Nginx site for {{ comp.name }} produced by Ansible.
server {
    listen 80;
    server_name {{ comp.domain }};

    # Certbot ACME challenge location (webroot)
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://127.0.0.1:{{ comp.listen_port }};
        proxy_read_timeout 90;
    }

    access_log /var/log/nginx/{{ project_name }}_{{ comp.name }}.access.log;
    error_log  /var/log/nginx/{{ project_name }}_{{ comp.name }}.error.log;
}

# Force HTTPS server block (if cert exists, certbot will replace or add)
server {
    listen 443 ssl;
    server_name {{ comp.domain }};

    ssl_certificate /etc/letsencrypt/live/{{ comp.domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ comp.domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://127.0.0.1:{{ comp.listen_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    access_log /var/log/nginx/{{ project_name }}_{{ comp.name }}.access.log;
    error_log  /var/log/nginx/{{ project_name }}_{{ comp.name }}.error.log;
}
